@page
@model FineUICore.Examples.RazorPages.Pages.Button.ButtonClickModel
@{
    ViewBag.Title = "Button/ButtonClick";
    var F = Html.F();
}

@section body {

    <f:SimpleForm BodyPadding="5px" Layout="VBox"   >
        <Items>
            <f:Button ID="btnServerClick" Text="服务器端事件" OnClick="@Url.Handler("btnServerClick_Click")"></f:Button>
            <f:Button ID="btnClientClick" Text="客户端事件" OnClientClick="alert('这是客户端事件');" CssClass="marginr"></f:Button>
            <f:Button ID="btnClientClick2" Text="客户端事件（通过ViewBag传递）" OnClientClick="@ViewBag.btnClientClick2Script"></f:Button>
            <f:Button ID="btnChangeClientClick2" Text="改变上个按钮的客户端事件" OnClick="@Url.Handler("btnChangeClientClick2_Click")"></f:Button>
        </Items>
    </f:SimpleForm>
}

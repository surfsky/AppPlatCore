@page
@model App.Pages.Test.DynamicGridModel
@using App.Components;
@{
    ViewBag.Title = "Grid/DynamicColumns";
    var F = Html.F();
}

@section body {

    <f:Grid ID="Grid1" IsFluid="true" ShowBorder="true" ShowHeader="true" Title="表格（动态创建列）" DataIDField="Id" DataTextField="Name" 
        DataSource="@DataSources.GetDataTable()" Columns="@ViewBag.Grid1Columns"
        />

    <f:Button Text="选中了哪些行" OnClientClick="notifySelectedRows('Grid1');"></f:Button>


}


@section script {

    <script src="~/res/js/grid.js"></script>

}
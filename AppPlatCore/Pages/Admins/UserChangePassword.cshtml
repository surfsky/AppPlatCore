@page
@model App.Pages.Admin.UserChangePasswordModel
@{
    ViewData["Title"] = "UserChangePassword";
}

@section body {

    <f:SimpleForm ID="SimpleForm1" ShowBorder="false" ShowHeader="false" BodyPadding="10" IsViewPort="true">
        <Toolbars>
            <f:Toolbar ID="Toolbar1">
                <Items>
                    <f:Button ID="btnClose" Icon="SystemClose" Text="关闭" OnClientClick="F.activeWindow.hide();" />
                    <f:Button ID="btnSaveClose" ValidateForms="SimpleForm1" Icon="SystemSaveClose" OnClick="@Url.Handler("UserChangePassword_btnSaveClose_Click")" OnClickFields="SimpleForm1" Text="保存后关闭"></f:Button>
                </Items>
            </f:Toolbar>
        </Toolbars>
        <Items>
            <f:HiddenField For="CurrentUser.ID" Name="hfUserID" />
            <f:label For="CurrentUser.Name" />
            <f:label For="CurrentUser.ChineseName" />
            <f:TextBox ID="tbxPassword" Label="新密码" TextMode="Password" Required="true" ShowRedStar="true" />
            <f:TextBox ID="tbxConfirmPassword" Label="确认密码" TextMode="Password" Required="true" ShowRedStar="true" CompareControl="tbxPassword" CompareOperator="Equal" />
        </Items>
    </f:SimpleForm>

}



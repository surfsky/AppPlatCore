@page
@model App.Pages.Admin.ChangePasswordModel
@{
    ViewData["Title"] = "ChangePassword";
}

@section body {

    <f:SimpleForm ID="SimpleForm1" LabelWidth="100" BodyPadding="10" LabelAlign="Top" ShowBorder="false" ShowHeader="false">
        <Toolbars>
            <f:Toolbar ID="Toolbar1">
                <Items>
                    <f:Button ID="btnSave" Icon="SystemSave" OnClick="@Url.Handler("ChangePassword_btnSave_OnClick")" OnClickFields="SimpleForm1" ValidateForms="SimpleForm1" ValidateTarget="Top" Text="保存"></f:Button>
                </Items>
            </f:Toolbar>
        </Toolbars>
        <Items>
            <f:TextBox ID="tbxOldPassword" TextMode="Password" Label="当前密码" Required="true" ShowRedStar="true"></f:TextBox>
            <f:TextBox ID="tbxNewPassword" TextMode="Password" Label="新密码" Required="true" ShowRedStar="true"></f:TextBox>
            <f:TextBox ID="tbxConfirmNewPassword" TextMode="Password" Label="确认新密码" Required="true" ShowRedStar="true"></f:TextBox>
        </Items>
    </f:SimpleForm>

}




@page
@model App.Pages.Admin.DeptFormModel
@{
    ViewData["Title"] = "Dept";
}

@section body {

    <f:SimpleForm ID="SimpleForm1" ShowBorder="false" ShowHeader="false" BodyPadding="10" IsViewPort="true">
        <Toolbars>
            <f:Toolbar ID="Toolbar1">
                <Items>
                    <f:Button ID="btnClose" Icon="SystemClose" Text="关闭" OnClientClick="F.activeWindow.hide()" />
                    <f:Button ID="btnSaveClose" ValidateForms="SimpleForm1" Icon="SystemSaveClose" OnClick="@Url.Handler("DeptEdit_btnSaveClose_Click")" OnClickFields="SimpleForm1" Text="保存后关闭"></f:Button>
                </Items>
            </f:Toolbar>
        </Toolbars>
        <Items>
            <f:HiddenField For="Dept.ID"></f:HiddenField>
            <f:TextBox For="Dept.Name"></f:TextBox>
            <f:TextBox For="Dept.SortIndex"></f:TextBox>
            <f:DropDownList For="Dept.ParentID" EnableSimulateTree="true" DataTextField="Name" DataValueField="ID" DataSimulateTreeLevelField="TreeLevel"
                            DataEnableSelectField="Enabled" Required="true" ShowRedStar="true" DataSource="@Model.Depts"></f:DropDownList>
            <f:TextArea For="Dept.Remark"></f:TextArea>
        </Items>
    </f:SimpleForm>

}





@page
@model App.Pages.Admin.UserViewModel
@{
    ViewData["Title"] = "UserView";
}

@section body {

    <f:Form ID="SimpleForm1" ShowBorder="false" ShowHeader="false" BodyPadding="10" IsViewPort="true">
        <Toolbars>
            <f:Toolbar ID="Toolbar1">
                <Items>
                    <f:Button ID="btnClose" Icon="SystemClose" Text="关闭" OnClientClick="F.activeWindow.hide();" />
                </Items>
            </f:Toolbar>
        </Toolbars>
        <Rows>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.Name" />
                    <f:TextBox For="CurrentUser.ChineseName" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.Gender" />
                    <f:TextBox For="CurrentUser.Enabled" Text="@(Model.CurrentUser.Enabled ? "启用" : "禁用")" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.Email" />
                    <f:TextBox For="CurrentUser.CompanyEmail" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.OfficePhone" />
                    <f:TextBox For="CurrentUser.OfficePhoneExt" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.HomePhone" />
                    <f:TextBox For="CurrentUser.CellPhone" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.Title" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.RoleUsers" Text="@Model.RoleText" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.Dept" Text="@Model.DeptText" />
                </Items>
            </f:FormRow>
            <f:FormRow>
                <Items>
                    <f:TextBox For="CurrentUser.Remark" />
                </Items>
            </f:FormRow>
        </Rows>
    </f:Form>
}



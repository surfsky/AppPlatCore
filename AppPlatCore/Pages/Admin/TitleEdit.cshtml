@page
@model App.Pages.Admin.TitleEditModel
@{
    ViewData["Title"] = "TitleEdit";
}

@section body {

    <f:SimpleForm ID="SimpleForm1" ShowBorder="false" ShowHeader="false" BodyPadding="10" IsViewPort="true">
        <Toolbars>
            <f:Toolbar ID="Toolbar1">
                <Items>
                    <f:Button ID="btnClose" Icon="SystemClose" Text="关闭" OnClientClick="F.activeWindow.hide();" />
                    <f:Button ID="btnSaveClose" ValidateForms="SimpleForm1" Icon="SystemSaveClose" OnClick="@Url.Handler("TitleEdit_btnSaveClose_Click")" OnClickFields="SimpleForm1" Text="保存后关闭"></f:Button>
                </Items>
            </f:Toolbar>
        </Toolbars>
        <Items>
            <f:HiddenField For="Title.ID" />
            <f:TextBox For="Title.Name" Required="true" ShowRedStar="true" />
            <f:TextBox For="Title.Remark" />
        </Items>
    </f:SimpleForm>

}




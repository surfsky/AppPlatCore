@page
@model App.Pages.Admin.ConfigModel
@{
    ViewData["Title"] = "Config";
}

@section body {
    <f:SimpleForm ID="SimpleForm1" BodyPadding="10" LabelAlign="Top" ShowBorder="false" ShowHeader="false" AutoScroll="true">
        <Toolbars>
            <f:Toolbar ID="Toolbar1">
                <Items>
                    <f:Button ID="btnSave" Icon="SystemSave" OnClick="@Url.Handler("Config_btnSave_OnClick")" OnClickFields="SimpleForm1" ValidateForms="SimpleForm1" ValidateTarget="Top" Text="保存" Enabled="@Model.PowerCoreConfigEdit"></f:Button>
                </Items>
            </f:Toolbar>
        </Toolbars>
        <Items>
            <f:TextBox ID="tbTitle" Label="网站标题" Required="true" ShowRedStar="true" Text="@Model.Config.Title"></f:TextBox>
            <f:TextBox ID="tbIcon" Label="网站图标" Required="false" ShowRedStar="false" Text="@Model.Config.Icon"></f:TextBox>
            <f:TextBox ID="tbLoginBg" Label="登录背景" Required="false" ShowRedStar="false" Text="@Model.Config.LoginBg"></f:TextBox>
            <f:TextBox ID="tbBeiAnNo" Label="备案号" Required="false" ShowRedStar="false" Text="@Model.Config.BeiAnNo"></f:TextBox>
            <f:DropDownList ID="ddlPageSize" Label="表格默认记录数" Required="true" ShowRedStar="true" SelectedValue="@Model.Config.PageSize.ToString()">
                <Items>
                    <f:ListItem Text="10" Value="10"></f:ListItem>
                    <f:ListItem Text="20" Value="20"></f:ListItem>
                    <f:ListItem Text="50" Value="50"></f:ListItem>
                    <f:ListItem Text="100" Value="100"></f:ListItem>
                </Items>
            </f:DropDownList>
            <f:TextArea ID="tbxHelpList" Height="320" Label="帮助下拉列表" Required="true" ShowRedStar="true" Text="@Model.HelpListText"></f:TextArea>
        </Items>
    </f:SimpleForm>

}




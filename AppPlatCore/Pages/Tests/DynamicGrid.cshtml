@page
@model App.Pages.Test.DynamicGridModel
@using App.Components;
@{
    var F = Html.F();
}

@section body {
    @F.Grid().ID("Grid2").IsFluid(true).ShowBorder(true).ShowHeader(true).Title("Grid").DataIDField("Id").DataTextField("Name").DataSource(Model.Users).Columns(
        F.RowNumberField(),
        F.RenderField().HeaderText("ID").DataField("ID").Width(100),
        F.RenderField().HeaderText("Name").DataField("Name").Width(200),
        F.RenderField().HeaderText("Birthday").DataField("Birthday").ExpandUnusedSpace(true)
    );
    <f:Grid ID="Grid1" IsFluid="true" ShowBorder="true" ShowHeader="true" Title="表格（动态创建列）" 
        DataIDField="Id" DataTextField="Name" 
        DataSource="@DemoData.GetDataTable()" Columns="@ViewBag.Grid1Columns"
        />
    <f:Button Text="选中了哪些行" OnClientClick="notifySelectedRows('Grid1');"></f:Button>
}


@section script {

    <script src="~/res/js/grid.js"></script>

}